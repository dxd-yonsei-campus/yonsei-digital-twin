---
import Layout from "@/layouts/Layout.astro";
---

<Layout>
  <main class="flex h-screen items-center justify-between max-w-5xl mx-auto">
    <div>
      <h1 class="text-4xl font-bold">Yonsei Digital Twin</h1>
      <p class="mt-0.5">A digital twin of the Yonsei University Campus.</p>
      <a
        href="/mapbox"
        class="inline-block bg-blue-100 rounded-sm text-sm font-medium mt-4 px-3 py-2.5 hover:bg-blue-200"
      >
        Sinchon Campus
      </a>
    </div>
    <div
      class="aspect-[3/2] rounded-lg border border-gray-100 w-128 p-1.5 grid place-content-center"
    >
      Image of application
    </div>
  </main>
</Layout>
