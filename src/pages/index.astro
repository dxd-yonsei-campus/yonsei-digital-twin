---
import Layout from '@/layouts/Layout.astro';
import { Button, buttonVariants } from '@/components/ui/button';
import HeroVideo from '@/components/landing/HeroVideo';
---

<Layout>
  <main
    class="mx-auto flex h-screen max-w-6xl flex-col items-center justify-center gap-8 px-4 lg:flex-row lg:justify-between"
  >
    <div class="text-center lg:text-left">
      <h1 class="text-4xl font-bold">Yonsei Digital Twin</h1>
      <p class="mt-0.5 text-lg text-muted-foreground">
        A digital twin of the Yonsei University Campus.
      </p>
      <div class="mt-4 flex flex-col items-center gap-1.5 sm:flex-row">
        <a
          class:list={[
            buttonVariants({ variant: 'default' }),
            'w-full sm:w-fit',
          ]}
          href="/map"
        >
          Sinchon Campus
        </a>
        <Button className="w-full sm:w-fit" disabled>
          International Campus (Coming Soon)
        </Button>
      </div>
    </div>
    <HeroVideo client:load />
  </main>
  <footer
    class="fixed bottom-4 w-full px-4 text-center text-sm text-muted-foreground/50"
  >
    <img
      class="mb-1 inline-block size-8.5"
      src="/favicon.png"
      alt="Yonsei DXD Lab"
    />
    <div>
      &copy; {new Date().getFullYear()} Yonsei DXD Lab
    </div>
  </footer>
</Layout>
